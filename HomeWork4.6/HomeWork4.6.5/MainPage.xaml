<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeWork4._4.MainPage">

    <StackLayout>
        <Grid x:Name="ProductsGrid" RowSpacing="6" ColumnSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Text="Name" Grid.Row="0" Grid.Column="0" FontAttributes="Bold" />
            <Label Text="Price" Grid.Row="0" Grid.Column="1" FontAttributes="Bold" />
            <Label Text="CountryOfOrigin" Grid.Row="0" Grid.Column="2" FontAttributes="Bold" />
            <Label Text="Description" Grid.Row="0" Grid.Column="3" FontAttributes="Bold" />
        </Grid>

        <Button Text="Add product" Clicked="OnAddProductClicked" />
        <Button Text="Delete product" Clicked="OnDeleteProductClicked" />
    </StackLayout>

</ContentPage>
